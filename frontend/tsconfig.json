{
  "compilerOptions": {
    "target": "ESNext",                     // Modern JavaScript target
    "useDefineForClassFields": true,        // Aligns with Vite/ESM class fields
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,                        // Only TypeScript files
    "skipLibCheck": true,                    // Skip type checking of node_modules
    "esModuleInterop": true,                 // Allow default imports from CommonJS
    "allowSyntheticDefaultImports": true,
    "strict": true,                          // Enable strict type checking
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,                          // Vite handles compilation
    "jsx": "react-jsx",                      // React 18 JSX transform
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
